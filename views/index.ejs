<%- include ('partials/homenavbar') -%>
<%- include ('partials/header.ejs') -%>

<body>
    <div class="container">
        <div class="jumbotron">
            <h1>Blog de Artigos</h1>
            <p>Um simples blog personalizado</p>
          </div>
        <hr>
        <% articles.forEach(articles => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= articles.title %></h2>
                </div>
                <div class="card-body">                    
                    <a href="/<%= articles.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
    
    <div class="row">
        <div class="col col-12" >
            <a style="float: right" href="/articles/page/2">Next >>></a>
        </div>
        <hr>
    </div>
</body>

